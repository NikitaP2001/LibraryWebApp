@model IEnumerable<LibraryWebApp.Tag>

@{
    ViewData["Title"] = "Index";
}

<h1>Теги</h1>

<p>
    @Html.ActionLink("Створити новий", "Create", "Tags", new { Bookid = ViewBag.BookId, Bookname = ViewBag.BookName } )
</p>
<table class="table">
    <thead>
        <tr>
            <th>
                @Html.DisplayNameFor(model => model.Name)
            </th>
            <th>
                @Html.DisplayNameFor(model => model.Description)
            </th>
            <th></th>
        </tr>
    </thead>
    <tbody>
        @foreach (var item in Model)
        {
            <tr>
                <td>
                    @Html.DisplayFor(modelItem => item.Name)
                </td>
                <td>
                    @Html.DisplayFor(modelItem => item.Description)
                </td>
                <td>
                    <a asp-action="Edit" asp-route-id="@item.Id" asp-route-Bookid="@ViewBag.BookId" 
                       asp-route-Bookname="@ViewBag.Bookname">Редагувати</a> |
                    <a asp-action="Details" asp-route-id="@item.Id" asp-route-Bookid="@ViewBag.BookId"
                       asp-route-Bookname="@ViewBag.Bookname">Деталі</a> |
                    <a asp-action="Delete" asp-route-id="@item.Id"asp-route-Bookid="@ViewBag.BookId"
                       asp-route-Bookname="@ViewBag.Bookname">Видалити</a>
                </td>
            </tr>
        }
    </tbody>
</table>
@if (ViewBag.BookId != null)
{
    <form asp-controller="Descriptions" asp-action="Index" asp-route-id="@ViewBag.BookId" asp-route-name="@ViewBag.BookName">
        <input type="submit" value="Назад до опису" class="btn-link" />
    </form>
}
